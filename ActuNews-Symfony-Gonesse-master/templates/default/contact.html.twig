{% extends "base.html.twig" %}

{% block title %}
    Contact
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-8 mx-auto">

                <h3 class="my-4 text-center">
                    Contact
                </h3>

                {# Affichage notifications flash #}
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form(form) }}

            </div>
        </div>
    </div>
{% endblock %}